<div class="panel panel-default payment-info credit-panel">
    <div class="panel-heading">Payment Info</div>
    <div class="panel-body row">

        <div class="credit col-md-4">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Date</td>
                        <td>Amount</td>
                        <td>Paid By</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each transactions}}
                        <tr>
                            <td>{{date}}</td>
                            <td>{{amount}}</td>
                            <td>{{paidBy}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

            <div id="transaction"></div>
        </div>
        <div class="cart col-md-4"></div>
        <div class="ach col-md-4"></div>
    </div>
</div>
