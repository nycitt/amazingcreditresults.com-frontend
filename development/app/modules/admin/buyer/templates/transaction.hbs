<form role="form">
    <div class="credit-details">
        <div class="col-md-4">
            <div class="form-group">
                <label class="sr-only" for="date">Date</label>
                <input type="date" class="form-control" id="date" placeholder="Date">
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="sr-only" for="amount">Amount</label>
                <input type="text" class="form-control" id="amount" placeholder="Amount">
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <select id="paid-by" class="form-control" name="state">
                    <option value="" disabled selected>Paid By</option>
                    <option value="Cash">Cash</option>
                    <option value="Credit Cart">Credit Cart</option>
                    <option value="Bank Transfer">Bank Transfer</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="sr-only" for="notes">Date</label>
        <input type="text" class="form-control" id="notes" placeholder="Notes">
    </div>

    <div class="centered">
        <button id="create-transaction" class="btn btn-large btn-default" type="button">Add Credit</button>
    </div>
</form>
